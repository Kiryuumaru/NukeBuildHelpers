<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>net8.0;net9.0</TargetFrameworks>
		<ImplicitUsings>enable</ImplicitUsings>
		<LangVersion>13</LangVersion>
		<Nullable>enable</Nullable>
		<CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
	</PropertyGroup>

	<PropertyGroup>
		<Authors>Kiryuumaru</Authors>
		<Company>Kiryuumaru</Company>
		<Copyright>Kiryuumaru</Copyright>
		<Description>NukeBuildHelpers for Nuke build.</Description>
		<PackageTags>NukeBuildHelpers, Nuke, Build, Helpers</PackageTags>
		<PackageProjectUrl>https://github.com/Kiryuumaru/NukeBuildHelpers</PackageProjectUrl>
		<RepositoryUrl>https://github.com/Kiryuumaru/NukeBuildHelpers</RepositoryUrl>
		<PackageLicenseFile>LICENSE</PackageLicenseFile>
		<PackageReadmeFile>README.md</PackageReadmeFile>
	</PropertyGroup>

	<ItemGroup>
		<None Include="..\LICENSE" Pack="true" PackagePath="" />
		<None Include="..\README.md" Pack="true" PackagePath="" />
	</ItemGroup>

	<ItemGroup>
		<!-- Override vulnerability warnings: https://github.com/advisories/GHSA-447r-wph3-92pm-->
		<PackageReference Include="System.Formats.Asn1" Version="9.0.0" />

		<PackageReference Include="Nuke.Common" Version="9.0.1" />
		<PackageReference Include="Semver" Version="3.0.0" />
		<PackageReference Include="Sharprompt" Version="2.4.5" />
		<PackageReference Include="YamlDotNet" Version="16.2.1" />
	</ItemGroup>

	<!-- Source generator project reference for packing -->
	<ItemGroup>
		<ProjectReference Include="..\NukeBuildHelpers.SourceGenerators\NukeBuildHelpers.SourceGenerators.csproj" ReferenceOutputAssembly="false" OutputItemType="Analyzer" PrivateAssets="contentfiles;build" />
	</ItemGroup>

	<ItemGroup Label="Package">

		<!-- Include the custom .targets file to check the source generator (.NET 6 is not needed as it guarantees Roslyn 4.x) -->
		<None Include="NukeBuildHelpers.targets" PackagePath="buildTransitive\netstandard2.0" Pack="true" />
		<None Include="NukeBuildHelpers.targets" PackagePath="buildTransitive\netstandard2.1" Pack="true" />
		<None Include="NukeBuildHelpers.targets" PackagePath="build\netstandard2.0" Pack="true" />
		<None Include="NukeBuildHelpers.targets" PackagePath="build\netstandard2.1" Pack="true" />

		<!-- Pack the source generator to the right package folder -->
		<None Include="..\NukeBuildHelpers.SourceGenerators\bin\$(Configuration)\netstandard2.0\NukeBuildHelpers.SourceGenerators.dll"
			  PackagePath="analyzers\dotnet\roslyn4.0\cs"
			  Pack="true"
			  Visible="false" />
	</ItemGroup>

</Project>
